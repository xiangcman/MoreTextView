<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:more="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.single.moretextview.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="少于自己指定的行数的textView:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <com.library.moretextview.MoreTextView
        android:id="@+id/short_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        more:expand="true"
        more:maxLine="3"
        more:mytextColor="#767676"
        more:mytextSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多于自己指定的行数的textView:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <com.library.moretextview.MoreTextView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        more:expand="true"
        more:maxLine="3"
        more:mytextColor="#767676"
        more:mytextSize="15sp"
        more:text="@string/text" />

</LinearLayout>
